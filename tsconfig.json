{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "#data/*": ["./app/data/*"],
      "#assets/*": ["./app/ui/assets/*"],
      "#components/*": ["./app/ui/components/*"],
      "#modules/*": ["./app/ui/modules/*"],
      "#scripts/*": ["./scripts/*"],
      "#types/*": ["./app/types/*"],
      "#utils/*": ["./app/ui/utils/*"],
      "#game-engine": ["./app/engine/bridge/index.ts"],
      "#game-engine/*": ["./app/engine/bridge/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
